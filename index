<!DOCTYPE html>
<html lang="ms">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>3D Endless Runner</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <style>
        body { margin: 0; overflow: hidden; font-family: 'Arial', sans-serif; background-color: #000; touch-action: none; }
        #ui {
            position: absolute;
            top: 20px;
            left: 20px;
            color: white;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
            pointer-events: none;
            z-index: 10;
        }
        #score { font-size: 28px; font-weight: bold; }
        
        #controls {
            position: absolute;
            bottom: 40px;
            width: 100%;
            display: flex;
            justify-content: center;
            gap: 20px;
            pointer-events: none;
            z-index: 10;
        }
        .btn {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.2);
            border: 3px solid white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            pointer-events: auto;
            user-select: none;
            cursor: pointer;
            backdrop-filter: blur(5px);
            -webkit-tap-highlight-color: transparent;
        }
        .btn:active { background: rgba(255, 255, 255, 0.5); transform: scale(0.95); }

        #game-over {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0,0,0,0.9);
            padding: 40px;
            border-radius: 20px;
            color: white;
            text-align: center;
            display: none;
            border: 4px solid #f44336;
            z-index: 100;
        }
        button#restart-btn {
            background: #f44336;
            color: white;
            border: none;
            padding: 12px 25px;
            font-size: 20px;
            border-radius: 8px;
            cursor: pointer;
            margin-top: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div id="ui">
        <div id="score">Skor: 0</div>
    </div>

    <div id="controls">
        <div class="btn" id="btn-left">KIRI</div>
        <div class="btn" id="btn-jump">LOMPAT</div>
        <div class="btn" id="btn-right">KANAN</div>
    </div>

    <div id="game-over">
        <h1>PERMAINAN TAMAT!</h1>
        <p id="final-score" style="font-size: 24px;">Skor Akhir: 0</p>
        <button id="restart-btn">Main Semula</button>
    </div>

    <script>
        let scene, camera, renderer, player, clock;
        let obstacles = [];
        let trees = []; // Array untuk simpan pokok
        let lanes = [-2.2, 0, 2.2]; 
        let currentLaneIndex = 1; 
        let score = 0;
        let isGameOver = false;
        let gameSpeed = 0.25;
        let playerVelocityY = 0;
        let isJumping = false;
        
        // Pelarasan Lompatan
        const gravity = -0.01;
        const jumpStrength = 0.26;

        function init() {
            scene = new THREE.Scene();
            // Latar belakang warna malam
            scene.background = new THREE.Color(0x0a0a1a);
            scene.fog = new THREE.Fog(0x0a0a1a, 15, 80);

            camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.set(0, 3.8, 7.5);
            camera.lookAt(0, 1.2, 0);

            renderer = new THREE.WebGLRenderer({ antialias: true });
            renderer.setPixelRatio(window.devicePixelRatio);
            renderer.setSize(window.innerWidth, window.innerHeight);
            document.body.appendChild(renderer.domElement);

            // Pencahayaan
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
            scene.add(ambientLight);

            const pointLight = new THREE.PointLight(0xffffff, 0.8);
            pointLight.position.set(0, 10, 5);
            scene.add(pointLight);

            // Tanah (Luar landasan)
            const groundGeo = new THREE.PlaneGeometry(100, 500);
            const groundMat = new THREE.MeshPhongMaterial({ color: 0x0f260f }); // Hijau gelap
            const ground = new THREE.Mesh(groundGeo, groundMat);
            ground.rotation.x = -Math.PI / 2;
            ground.position.z = -200;
            ground.position.y = -0.05;
            scene.add(ground);

            // Landasan larian
            const floorGeo = new THREE.PlaneGeometry(8, 500);
            const floorMat = new THREE.MeshPhongMaterial({ color: 0x222222 }); // Kelabu gelap
            const floor = new THREE.Mesh(floorGeo, floorMat);
            floor.rotation.x = -Math.PI / 2;
            floor.position.z = -200;
            scene.add(floor);

            // Penanda Jalur
            for(let i = 0; i < 3; i++) {
                const lineGeo = new THREE.PlaneGeometry(0.1, 500);
                const lineMat = new THREE.MeshBasicMaterial({ color: 0x555555 });
                const line = new THREE.Mesh(lineGeo, lineMat);
                line.rotation.x = -Math.PI / 2;
                line.position.set(lanes[i], 0.01, -200);
                scene.add(line);
            }

            createPlayer();

            window.addEventListener('keydown', handleKeyDown);
            setupButton('btn-left', () => movePlayer(-1));
            setupButton('btn-right', () => movePlayer(1));
            setupButton('btn-jump', jump);
            
            document.getElementById('restart-btn').addEventListener('click', restartGame);
            window.addEventListener('resize', onWindowResize);

            spawnObstacleLoop();
            spawnEnvironmentLoop(); // Loop khas untuk pokok
            animate();
        }

        function setupButton(id, action) {
            const btn = document.getElementById(id);
            btn.addEventListener('pointerdown', (e) => {
                e.preventDefault();
                action();
            });
        }

        function createPlayer() {
            const group = new THREE.Group();
            
            // Badan (Baju Biru)
            const bodyGeo = new THREE.BoxGeometry(0.8, 1.2, 0.5);
            const bodyMat = new THREE.MeshPhongMaterial({ color: 0x0066ff });
            const body = new THREE.Mesh(bodyGeo, bodyMat);
            body.position.y = 0.6;
            group.add(body);

            // Kepala
            const headGeo = new THREE.BoxGeometry(0.6, 0.6, 0.6);
            const headMat = new THREE.MeshPhongMaterial({ color: 0xffdbac });
            const head = new THREE.Mesh(headGeo, headMat);
            head.position.y = 1.5;
            group.add(head);

            player = group;
            player.position.set(lanes[currentLaneIndex], 0, 0);
            scene.add(player);
        }

        // Fungsi untuk mencipta pokok
        function createTree(x, z) {
            const treeGroup = new THREE.Group();

            // Batang pokok
            const trunkGeo = new THREE.CylinderGeometry(0.3, 0.4, 1.5, 8);
            const trunkMat = new THREE.MeshPhongMaterial({ color: 0x5c4033 }); // Coklat gelap
            const trunk = new THREE.Mesh(trunkGeo, trunkMat);
            trunk.position.y = 0.75;
            treeGroup.add(trunk);

            // Daun pokok
            const leavesGeo = new THREE.ConeGeometry(1.8, 3.5, 8);
            const leavesMat = new THREE.MeshPhongMaterial({ color: 0x1e5631 }); // Hijau
            const leaves = new THREE.Mesh(leavesGeo, leavesMat);
            leaves.position.y = 2.5;
            treeGroup.add(leaves);

            treeGroup.position.set(x, 0, z);
            scene.add(treeGroup);
            trees.push(treeGroup);
        }

        function handleKeyDown(e) {
            if (isGameOver) return;
            if (e.key === "ArrowLeft") movePlayer(-1);
            if (e.key === "ArrowRight") movePlayer(1);
            if (e.key === "ArrowUp" || e.key === " ") jump();
        }

        function movePlayer(direction) {
            if (isGameOver) return;
            let nextIndex = currentLaneIndex + direction;
            if (nextIndex >= 0 && nextIndex <= 2) {
                currentLaneIndex = nextIndex;
            }
        }

        function jump() {
            if (!isJumping && !isGameOver) {
                isJumping = true;
                playerVelocityY = jumpStrength;
            }
        }

        function spawnObstacleLoop() {
            if (isGameOver) return;

            // Cipta Kotak Rintangan
            const lane = Math.floor(Math.random() * 3);
            const geo = new THREE.BoxGeometry(1.5, 1.5, 1.5);
            const mat = new THREE.MeshPhongMaterial({ color: 0x882222 }); // Warna Merah Gelap
            const obs = new THREE.Mesh(geo, mat);
            obs.position.set(lanes[lane], 0.75, -70);
            scene.add(obs);
            obstacles.push(obs);

            let spawnDelay = Math.max(650, 1600 - (score * 2.5));
            setTimeout(spawnObstacleLoop, spawnDelay);
        }

        function spawnEnvironmentLoop() {
            if (isGameOver) return;

            // Cipta pokok di kiri landasan
            const leftX = -5 - Math.random() * 3;
            createTree(leftX, -80);

            // Cipta pokok di kanan landasan
            const rightX = 5 + Math.random() * 3;
            createTree(rightX, -80);

            // Loop untuk spawn pokok (Lebih kerap daripada rintangan)
            setTimeout(spawnEnvironmentLoop, 300);
        }

        function animate() {
            if (isGameOver) return;
            requestAnimationFrame(animate);

            // Fizik Lompatan
            if (isJumping) {
                player.position.y += playerVelocityY;
                playerVelocityY += gravity;
                
                if (player.position.y <= 0) {
                    player.position.y = 0;
                    isJumping = false;
                    playerVelocityY = 0;
                }
            }

            // Gerakan Jalur Pemain (Interpolasi Halus)
            player.position.x = THREE.MathUtils.lerp(player.position.x, lanes[currentLaneIndex], 0.2);

            // Update Rintangan
            for (let i = obstacles.length - 1; i >= 0; i--) {
                obstacles[i].position.z += gameSpeed;
                
                // Detection Tabrakan
                const boxPos = obstacles[i].position;
                if (Math.abs(boxPos.z - player.position.z) < 1.0 &&
                    Math.abs(boxPos.x - player.position.x) < 1.0 &&
                    player.position.y < 1.3) {
                    gameOver();
                }

                // Buang rintangan yang dah melepasi kamera
                if (obstacles[i].position.z > 10) {
                    scene.remove(obstacles[i]);
                    obstacles.splice(i, 1);
                    score += 10;
                    document.getElementById('score').innerText = "Skor: " + score;
                    gameSpeed += 0.0005; // Kelajuan bertambah sedikit
                }
            }

            // Update Pokok (Pemandangan)
            for (let i = trees.length - 1; i >= 0; i--) {
                trees[i].position.z += gameSpeed;

                // Buang pokok yang dah melepasi kamera
                if (trees[i].position.z > 15) {
                    scene.remove(trees[i]);
                    trees.splice(i, 1);
                }
            }

            renderer.render(scene, camera);
        }

        function gameOver() {
            isGameOver = true;
            document.getElementById('game-over').style.display = 'block';
            document.getElementById('final-score').innerText = "Skor Akhir: " + score;
        }

        function restartGame() {
            score = 0;
            gameSpeed = 0.25;
            isGameOver = false;
            currentLaneIndex = 1;
            playerVelocityY = 0;
            isJumping = false;
            
            document.getElementById('game-over').style.display = 'none';
            document.getElementById('score').innerText = "Skor: 0";

            // Bersihkan rintangan
            obstacles.forEach(o => scene.remove(o));
            obstacles = [];

            // Bersihkan pokok
            trees.forEach(t => scene.remove(t));
            trees = [];
            
            player.position.set(lanes[currentLaneIndex], 0, 0);
            
            spawnObstacleLoop();
            spawnEnvironmentLoop();
            animate();
        }

        function onWindowResize() {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        }

        window.onload = init;
    </script>
</body>
</html>
